<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
	<group id="custom_crongroup">
		<job name="paranerd_bonus_update" instance="Paranerd\Referrer\Cron\BonusUpdate" method="execute">
			<schedule>0 0 * * *</schedule>
		</job>
		<job name="paranerd_level_update" instance="Paranerd\Referrer\Cron\LevelUpdate" method="execute">
			<schedule>0 0 1 * *</schedule>
		</job>
	</group>
</config>